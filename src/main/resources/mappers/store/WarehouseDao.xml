<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lemonico.store.dao.WarehouseDao">

    <select id="getInfoByWarehouseCd" resultType="com.lemonico.common.bean.Mw400_warehouse">
        select warehouse_nm,tel,zip,todoufuken,address1,address2,responsible
        from mw400_warehouse where warehouse_cd = #{warehouse_cd}
    </select>

    <select id="getWarehouseName" resultType="java.lang.String">
        select mw400.warehouse_cd
        from mw400_warehouse mw400
        left join ms202_customer_wh ms202 on mw400.warehouse_cd = ms202.warehouse_cd
        where ms202.client_id = #{client_id} and ms202.del_flg = 0
    </select>
</mapper>